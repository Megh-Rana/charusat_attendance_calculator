{
    "version": 2,
    "builds": [
        {
            "src": "client/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        },
        {
            "src": "api/attendance.js",
            "use": "@vercel/node"
        },
        {
            "src": "api/analytics.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/attendance",
            "dest": "/api/attendance.js"
        },
        {
            "src": "/api/analytics",
            "dest": "/api/analytics.js"
        },
        {
            "handle": "filesystem"
        },
        {
            "src": "/(.*)",
            "dest": "/client/$1"
        }
    ]
}